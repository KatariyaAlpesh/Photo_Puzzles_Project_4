<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#32DA2D"
    android:orientation="vertical"
    android:layout_margin="30dp">

    <ImageView
        android:id="@+id/ThirdPageDialogeLevelClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="end"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_delete"/>

    <TextView
        android:id="@+id/DialogeLevelText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="  Level 1  "
        android:textColor="@color/red"
        android:fontFamily="@font/lemon"
        android:background="@drawable/greenbackground_level_image"/>

    <TextView
        android:id="@+id/DialogeLevelText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="  Level 2  "
        android:textColor="@color/yellow"
        android:fontFamily="@font/lemon"
        android:background="@drawable/greenbackground_level_image"/>

    <TextView
        android:id="@+id/DialogeLevelText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="  Level 3  "
        android:textColor="@color/green"
        android:fontFamily="@font/lemon"
        android:background="@drawable/greenbackground_level_image"/>

    <TextView
        android:id="@+id/DialogeLevelText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="  Level 4  "
        android:textColor="@color/blue"
        android:fontFamily="@font/lemon"
        android:background="@drawable/greenbackground_level_image"/>

</LinearLayout>